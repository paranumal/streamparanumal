@kernel void bs5(const dlong Nblocks,
                 const dlong N,
                 const dfloat alpha,
                 @restrict const dfloat *Ap,
                 @restrict       dfloat *r,
                 @restrict       dfloat *rdotr){

for(dlong b=0;b<Nblocks;++b;@outer(0)){

    @shared dfloat s_ddot[AXPYDOT_BLOCKSIZE];

    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)){
      dlong id = t + b*AXPYDOT_BLOCKSIZE;
      dfloat r_ddot = 0.0;
      while (id<N) {
        const dfloat r_r = r[id] + alpha*Ap[id];
        r[id] = r_r;
        r_ddot += r_r*r_r;
        id += AXPYDOT_BLOCKSIZE*Nblocks;
      }
      s_ddot[t] = r_ddot;
    }

#if AXPYDOT_BLOCKSIZE>512
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<512) s_ddot[t] += s_ddot[t+512];
#endif
#if AXPYDOT_BLOCKSIZE>256
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<256) s_ddot[t] += s_ddot[t+256];
#endif
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<128) s_ddot[t] += s_ddot[t+128];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t< 64) s_ddot[t] += s_ddot[t+ 64];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t< 32) s_ddot[t] += s_ddot[t+ 32];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t< 16) s_ddot[t] += s_ddot[t+ 16];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<  8) s_ddot[t] += s_ddot[t+  8];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<  4) s_ddot[t] += s_ddot[t+  4];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<  2) s_ddot[t] += s_ddot[t+  2];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<  1) rdotr[b] = s_ddot[0] + s_ddot[1];
  }

  for(dlong b=0;b<1;++b;@outer(0)){

    @shared dfloat s_ddot[AXPYDOT_BLOCKSIZE];

    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)){
      dlong id = t;
      dfloat r_ddot = 0.0;
      while (id<Nblocks) {
        r_ddot += rdotr[id];
        id += AXPYDOT_BLOCKSIZE;
      }
      s_ddot[t] = r_ddot;
    }

#if AXPYDOT_BLOCKSIZE>512
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<512) s_ddot[t] += s_ddot[t+512];
#endif
#if AXPYDOT_BLOCKSIZE>256
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<256) s_ddot[t] += s_ddot[t+256];
#endif
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<128) s_ddot[t] += s_ddot[t+128];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t< 64) s_ddot[t] += s_ddot[t+ 64];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t< 32) s_ddot[t] += s_ddot[t+ 32];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t< 16) s_ddot[t] += s_ddot[t+ 16];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<  8) s_ddot[t] += s_ddot[t+  8];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<  4) s_ddot[t] += s_ddot[t+  4];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<  2) s_ddot[t] += s_ddot[t+  2];
    for(int t=0;t<AXPYDOT_BLOCKSIZE;++t;@inner(0)) if(t<  1) rdotr[b] = s_ddot[0] + s_ddot[1];
  }
}


